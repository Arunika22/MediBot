<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.activities.home.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_doctors"
        android:name="com.example.myapplication.activities.home.ui.doctor.DoctorFragment"
        android:label="Doctors"
        tools:layout="@layout/fragment_doctor" />

    <fragment
        android:id="@+id/navigation_appointment"
        android:name="com.example.myapplication.activities.home.ui.appointment.AppointmentFragment"
        android:label="Appointment"
        tools:layout="@layout/fragment_appointment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.myapplication.activities.home.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>